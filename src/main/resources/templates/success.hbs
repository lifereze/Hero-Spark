{{#partial "links"}}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.3/css/mdb.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
{{/partial}}
{{#partial "content"}}
    <div class="text-center success">
        <h2 class="hd-success">Awesome! Squad Created</h2><br>
    {{#if userSquad}}
            <p>You Created Your Squad <br> The next step is adding heroes to Squad. Let's Go ahead</p><br>
            <a href="/squads"><button class="btn btn-outline-teal dark-4">View Squads</button></a>
    {{else}}
        {{#if heroes}}
                <p>Your hero Is Ready for the Fight<br> Click him to view the squad</p>
                <a href="/squads"><img src="/images/bat.webp" alt="Hero-success" class="img-fluid hero-run"></a>
        {{else}}
            {{#if full}}
                    <p>{{full}}</p>
                    <a href="/squads"><button class="btn btn-outline-teal dark-4">View Squads</button></a>
            {{else}}
                    <p>Your squad has been deleted</p>
                    <a href="/"><button class="btn btn-outline-teal dark-4">Go Home</button></a>
            {{/if}}
        {{/if}}
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}